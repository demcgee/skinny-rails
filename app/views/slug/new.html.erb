<h1>Add A New URL</h1>


<%= form_for @my_url do |form| %>

  <p>
    <%= form.label :url, "Your URL:" %>
    <%= form.text_field :url %>
  </p>

  <% if @my_url.errors[:url].any? %>
    <p class='error-messages'>
      The given url <%= @my_url.errors[:url].to_sentence %>.
    </p>
  <% end %>

  <p class='buttons'>
    <%= form.submit "Shorten my URL" %>
  </p>

<% end %>
